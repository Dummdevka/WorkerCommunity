@page
@model Presentation.Pages.Authentication.LoginModel

@{

    <div class="flex flex-col items-center justify-center mt-8">
        <partial name="Includes/_FormValidation"></partial>
        <form method="post"
              class="bg-green-500 drop-shadow-md rounded-md mt-3 p-4 flex flex-col justify-center content-center w-1/3 self-center"
              asp-route-returnUrl="@Model.ReturnUrl">
            <h3 class="font-semibold mb-4 text-white">Log in</h3>
            <div class="mb-4 flex flex-col">
                <label class="font-semibold" for="Email">Email:</label>
                <input name="Email" type="text" placeholder="Email..." class="w-full rounded-md border-none p-1 m-1 h-10" />
            </div>
            <div class="mb-4 flex flex-col">
                <label class="font-semibold" for="Password">Password:</label>
                <input name="Password" type="password" placeholder="Password..." class="w-full rounded-md border-none p-1 m-1 h-10" />
            </div>
            <button class="rounded-sm bg-green-400 hover:bg-green-900 text-green-900 hover:text-white drop-shadow-sm h-10 transition">Log in</button>
        </form>
    </div>
    
}

